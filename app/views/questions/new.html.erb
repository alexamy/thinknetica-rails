<h1>Create new question</h1>

<form action="/tests/<%= @test.id %>/questions" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <p>
    <label for="question-body">Body:</label>
    <input type="text" name="question[body]" id="question-body"><br>

    <label for="question-answers-0">Answer 1:</label>
    <input type="text" name="question[answers][]" id="question-answers-0">
    <br>

    <label for="question-answers-1">Answer 2:</label>
    <input type="text" name="question[answers][]" id="question-answers-1">
    <br>

    <label for="question-answers-2">Answer 3:</label>
    <input type="text" name="question[answers][]" id="question-answers-2">
    <br>

    <label for="question-answers-3">Answer 4:</label>
    <input type="text" name="question[answers][]" id="question-answers-3">
    <br>
  </p><br>

  <input type="submit" value="Create">
</form>
