<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <div class="nav">
        <p class="user">Добро пожаловать, <b><%= current_user.email %></b></p>
        <p class="logout"><%= link_to 'Выйти', logout_path %></p>
      </p>
    <% end %>
    <%= yield %>
  </body>

  <div class="footer">
    <hr>
    <%= render "layouts/footer" %>
  </div>
</html>
